<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lisbike_pora.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_imageInputFragment"
            app:destination="@id/imageInputFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accelerometerStateFragment"
            app:destination="@id/accelerometerStateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_imageSimulationFragment"
            app:destination="@id/imageSimulationFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageInputFragment"
        android:name="com.example.lisbike_pora.ImageInputFragment"
        android:label="fragment_image_input"
        tools:layout="@layout/fragment_image_input" >
        <action
            android:id="@+id/action_imageInputFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/accelerometerStateFragment"
        android:name="com.example.lisbike_pora.AccelerometerStateFragment"
        android:label="fragment_accelerometer_state"
        tools:layout="@layout/fragment_accelerometer_state" >
        <action
            android:id="@+id/action_accelerometerStateFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageSimulationFragment"
        android:name="com.example.lisbike_pora.ImageSimulationFragment"
        android:label="fragment_image_simulation"
        tools:layout="@layout/fragment_image_simulation" >
        <action
            android:id="@+id/action_imageSimulationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>